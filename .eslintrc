{
    "env": {
        "commonjs": true,
        "es6": true,
        "mocha": true
    },
    "plugins": [
        "jest"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "rules": {
        "indent": ["error", 2],
        "prettier/prettier": [
        "error",
        {
            "singleQuote": true,
            "trailingComma": "es5"
        }
        ]
    }
}